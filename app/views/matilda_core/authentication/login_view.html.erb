<div class="c-card c-card--centerpage">
  <div class="c-card__header">
    <div class="c-card__header-title">
      <%= I18n.t 'matilda_core.titles.login' %>
    </div>

    <ul class="c-card__header-actions">
      <% if MatildaCore.config.authentication_permit_signup %>
        <li class="c-card__header-action">
          <a class="c-button c-button--black" href="<%= matilda_core.authentication_signup_view_path %>"><%= I18n.t 'matilda_core.cta.signup' %></a>
        </li>
      <% end %>
      <li class="c-card__header-action">
        <a class="c-button c-button--black" href="<%= matilda_core.authentication_recover_password_view_path %>"><%= I18n.t 'matilda_core.cta.recover_password' %></a>
      </li>
    </ul>
  </div>
  <div class="c-card__body">
    <%= form_tag matilda_core.authentication_login_action_path, method: :post, remote: true, data: { controller: 'form', action: 'ajax:success->form#validateResponse', 'form-redirect': MatildaCore.config.authentication_session_valid_custom_redirect || matilda_core.groups_select_view_path }, class: 'c-form c-grid__container-spaced' do %>
      <div class="c-input c-grid__col c-grid__col--24">
        <label class="c-input__label" for="username_email"><%= I18n.t 'matilda_core.labels.username_or_email' %></label>
        <input class="c-input__field" type="text" name="username_email" id="username_email" placeholder="<%= I18n.t 'matilda_core.helps.insert_username_or_email' %>" autocomplete="off" data-target="form.field" required>
      </div>

      <div class="c-input c-grid__col c-grid__col--24">
        <label class="c-input__label" for="password"><%= I18n.t 'matilda_core.labels.password' %></label>
        <input class="c-input__field" type="password" name="password" id="password" placeholder="<%= I18n.t 'matilda_core.helps.insert_password' %>" autocomplete="off" data-target="form.field" required>
      </div>

      <div class="c-form__actions c-grid__col c-grid__col--24">
        <button class="c-button" data-target="form.submit"><%= I18n.t 'matilda_core.cta.login' %></button>
      </div>
    <% end %>
  </div>
</div>
